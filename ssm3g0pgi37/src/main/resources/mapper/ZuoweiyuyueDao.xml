<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.ZuoweiyuyueDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.entity.ZuoweiyuyueEntity" id="zuoweiyuyueMap">
        <result property="refno" column="refno"/>
        <result property="mingcheng" column="mingcheng"/>
        <result property="leixing" column="leixing"/>
        <result property="tupian" column="tupian"/>
        <result property="feiyong" column="feiyong"/>
        <result property="seatnum" column="seatnum"/>
        <result property="reservationdate" column="reservationdate"/>
        <result property="timeslot" column="timeslot"/>
        <result property="zhanghao" column="zhanghao"/>
        <result property="shouji" column="shouji"/>
        <result property="xingming" column="xingming"/>
        <result property="reservationstate" column="reservationstate"/>
        <result property="shifouqiandao" column="shifouqiandao"/>
        <result property="sfsh" column="sfsh"/>
        <result property="shhf" column="shhf"/>
        <result property="ispay" column="ispay"/>
    </resultMap>

	<select id="selectListVO"
		resultType="com.entity.vo.ZuoweiyuyueVO" >
		SELECT * FROM zuoweiyuyue  zuoweiyuyue         
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectVO"
		resultType="com.entity.vo.ZuoweiyuyueVO" >
		SELECT  zuoweiyuyue.* FROM zuoweiyuyue  zuoweiyuyue
 		<where> 1=1 ${ew.sqlSegment}</where>
	</select>

    <select id="selectListView"
		resultType="com.entity.view.ZuoweiyuyueView" >

		SELECT  zuoweiyuyue.* FROM zuoweiyuyue  zuoweiyuyue 	        
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.entity.view.ZuoweiyuyueView" >
		SELECT * FROM zuoweiyuyue  zuoweiyuyue <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	

    <select id="selectValue" resultType="map" >
        SELECT ${params.xColumn}, sum(${params.yColumn}) total FROM zuoweiyuyue
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.xColumn}
    </select>

    <select id="selectTimeStatValue" resultType="map" >
        <if test = 'params.timeStatType == "日"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m-%d') ${params.xColumn}, sum(${params.yColumn}) total FROM zuoweiyuyue
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m-%d')
        </if>
        <if test = 'params.timeStatType == "月"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m') ${params.xColumn}, sum(${params.yColumn}) total FROM zuoweiyuyue
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m')
        </if>
        <if test='params.timeStatType == "季"'>
                SELECT CONCAT(YEAR(${params.xColumn}), ' - ', ELT(QUARTER(${params.xColumn}), '第一季度', '第二季度', '第三季度', '第四季度')) as ${params.xColumn}, sum(${params.yColumn}) total FROM orders
                <where> 1=1 ${ew.sqlSegment}</where>
                group by CONCAT(YEAR(${params.xColumn}), ' - ', ELT(QUARTER(${params.xColumn}), '第一季度', '第二季度', '第三季度', '第四季度'))
        </if>
        <if test = 'params.timeStatType == "年"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y') ${params.xColumn}, sum(${params.yColumn}) total FROM zuoweiyuyue
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y')
        </if>
    </select>
   
    <select id="selectGroup" resultType="map" >
        SELECT ${params.column} , count(1) total FROM zuoweiyuyue  
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.column}
    </select>




	
</mapper>
